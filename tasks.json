{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
        "tasks": [
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": {
                "owner": "tslint",
                "severity": "warning",
                "fileLocation": ["absolute"],
                "pattern":[
                    {
                        "regexp": "^(WARNING|ERROR):(\\s+\\(\\S*\\))?\\s+(\\S.*)\\[(\\d+), (\\d+)\\]:\\s+(.*)$",
                        "severity": 1,
                        "file": 3,
                        "line": 4,
                        "column": 5,
                        "message": 6
                    }
                ]
            }
        },
        {
            "type": "gulp",
            "task": "default",
            "problemMatcher": []
        }
    ]
}
{
    "compilerOptions": {
        "target": "es5"
        ,"module": "commonjs"
        ,"lib" : ["es6", "dom"]
        ,"noImplicitAny": true
        ,"removeComments": true
        ,"preserveConstEnums": true
        ,"sourceMap": true
        ,"outDir": "./src"
        ,"sourceRoot": "./dynamics365"
        ,"strictNullChecks": true
        ,"typeRoots": [
            "./node_modules/@types/"
        ]
        ,"types": [
            "jquery"
            ,"xrm"
        ]
    }
    ,"include": [
        "dynamics365/**/*"
    ]
    ,"typeAcquisition": {
        "enable": true
    }
    ,"compileOnSave": true
}